<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="model.urun.Urun" table="URUN">
       
       <id name = "urunID" column="URUN_ID">
            <generator class="increment"/>
        </id>

       
        <property name="urunAdi" column="URUN_ADI" type = "string" />
        <property name="barkod" column="BARKOD" type = "integer" />
        <property name="stok" column="STOK" type = "integer" />
        <property name="birimFiyat" column="FIYATI" type = "double" />
        
    </class>
</hibernate-mapping>
